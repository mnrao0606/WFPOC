{
    "name": "ManageSupplierInvoices",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^6",
        "@sap/xssec": "^3",
        "express": "^4",
        "hdb": "^0.19.0",
        "passport": "^0"
    },
    "scripts": {
        "start": "cds run",
        "watch-companycodefiori": "cds watch --open companycodefiori/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy ManageSupplierInvoices --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
        "watch-invoicefiori": "cds watch --open invoicefiori/webapp/index.html?sap-ui-xx-viewCache=false"
    },
    "cds": {
        "build": {
            "tasks": [
                {
                    "for": "hana",
                    "dest": "../db"
                },
                {
                    "for": "node-cf"
                }
            ]
        },
        "requires": {
            "db": {
                "kind": "hana-cloud"
            },
            "auth": {
                "kind": "xsuaa"
            },
            "approuter": {
                "kind": "cloudfoundry"
            }
        }
    },
    "sapux": [
        "app/companycodefiori",
        "app/invoicefiori"
    ],
    "devDependencies": {
        "@sap/eslint-plugin-ui5-jsdocs": "^2.0.5",
        "@sap/ux-specification": "^1.108.2",
        "@sapui5/ts-types": "^1.92.2",
        "eslint": "^7.32.0",
        "rimraf": "^3.0.2"
    }
}